<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imgFoodOrder"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder"
        android:background="@drawable/placeholder"
        android:contentDescription="Ảnh món ăn" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_marginStart="12dp">

        <!-- TextViews theo chiều dọc -->
        <TextView
            android:id="@+id/txtFoodNameOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 x Food name"
            android:textColor="#212121"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtFoodPriceOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:text="Total Price"
            android:textColor="#FF5722"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingTop="6dp">

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnRatingOrderDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FD5858"
        android:text="Đánh giá"
        app:cornerRadius="7dp" />
</LinearLayout>
